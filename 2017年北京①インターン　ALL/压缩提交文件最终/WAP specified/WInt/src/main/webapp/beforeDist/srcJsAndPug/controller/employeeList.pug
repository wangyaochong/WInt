div(ng-controller='employeeList')
    .panel(class='panel-default')
        .panel-heading
            table.table(class=' table-hover')
                h3 Salary Send Config
                tbody
                    tr
                        td payCardNumber:
                        td
                            input.form-control(type='text',   placeholder='Input...' ng-model="globalConfig.salaryPayCardNumber"
                            ng-disabled="isEditingSalarySendConfig==false")
                        td salaryDay:
                        td
                            input.form-control(type='number', min=1 max=28 placeholder='Input...' ng-model="globalConfig.salarySendingDate" ng-disabled="true")
                        td nextSalaryDay:
                        td
                            input.form-control(type='number', min=1 max=28 placeholder='Input...' ng-model="globalConfig.salaryNextSendingDate"
                            ng-disabled="isEditingSalarySendConfig==false")
                        td operation
                        td
                            button.btn.btn-default(ng-show="isEditingSalarySendConfig==false" type='button' ng-click="isEditingSalarySendConfig=true") edit
                            button.btn.btn-default(ng-show="isEditingSalarySendConfig==true" type='button' ng-click="isEditingSalarySendConfig=false;saveSalarySendConfig()") save
                            button.btn.btn-default(ng-show="isEditingSalarySendConfig==true" type='button' ng-click="isEditingSalarySendConfig=false;getSendSalaryConfig()") cancel


    .panel-body
        div
            h3(style="display:inline-block") Employees
            button.btn.btn-default.pull-right(type='button' ng-click="addNewEmployee()") add by file
            button.btn.btn-default.pull-right(type='button' ng-click="addNewEmployee()") add
        table.table(class=' table-hover' ng-table="customerListTableParams" show-filter="true" autocomplete="off" )
            tbody
                tr(ng-repeat="item in $data")
                    td(ng-cloak="" title=" 'id' ", sortable=" 'id' " filter="{id:'text'}") {{item.id}}
                    td(ng-cloak="" title=" 'branch office' " sortable=" 'branchGroup' " filter="{branchGroup:'text'}") {{item.branchGroup.name}}
                    td(ng-cloak="" title=" 'role' " sortable=" 'role' " filter="{role:'text'}") {{item.role}}
                    td(ng-cloak="" title=" 'salary' " sortable=" 'salary' " filter="{salary:'text'}") {{item.salary}}
                    td(ng-cloak="" title=" 'email' ", sortable=" 'email' " filter="{email:'text'}") {{item.email}}
                    td(ng-cloak="" title=" 'name' ", sortable=" 'name' "  filter="{name:'text'}" ) {{item.name}}
                    td(ng-cloak="" title=" 'phone' "  sortable=" 'phoneNumber' "  filter="{phoneNumber:'text'}") {{item.phoneNumber}}
                    td(ng-cloak="" title=" 'gender' "  sortable=" 'gender' " filter="{gender:'text'}") {{item.gender}}
                    td(ng-cloak="" title=" 'birthDate' "   ) {{item.birthDate|date:"yyyy/MM/dd"}}
                    td.table-edit-col(ng-cloak="" title=" 'operation' ")
                        .btn-group.pull-right
                            button.btn.btn-default(type='button' ng-click="addNewEmployee(item);customerListTableParams.reload() ") edit
                            button.btn.btn-default(type='button' ng-click="deleteemployees(item.id);customerListTableParams.reload() ") delete







