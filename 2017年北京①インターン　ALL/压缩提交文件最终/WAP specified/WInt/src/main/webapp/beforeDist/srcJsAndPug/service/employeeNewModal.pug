.modal-content
    .modal-body
        form(method='post', role='form' name="employeeNewForm" autocomplete="off")
            legend {{modalTitle}}
            .form-group
                label() branch office
                select.form-control(ng-if="employee.branchGroup" ng-model="employee.branchGroup" ng-options="x.name for x in branchGroups")
                label() role
                select.form-control(ng-model="employee.role" ng-options="x for x in roles")
                label(for='salary') salary
                input.form-control(type='number' name='salary' id='salary'  placeholder='salary...' ng-model='employee.salary')
                label(for='name') name
                input.form-control(type='text', name='name' id='name', placeholder='name...' ng-model='employee.name' )
                label(for='email') email
                input.form-control( type='text', name='email', id='email', placeholder='email...' ng-model="employee.email" )
                label(for='phoneNumber') phone number
                input.form-control(type='text' name='phoneNumber' id='phoneNumber' placeholder='phone number...' ng-model='employee' +
                '.phoneNumber' )
                label(for='birthDate') birth date
                input.form-control(type='text' name='birthDate' id='birthDate' placeholder='birth date....' ng-model='employee.birthDate')
                label(for='gender') gender
                select.form-control(name='name', id='gender' ng-model="employee.gender" )
                    option(value='MALE' selected="selected")  MALE
                    option(value='FEMALE') FEMALE

    .modal-footer
        button.btn.btn-default(type='button', ng-click="closeModal()") Close
        button.btn.btn-primary(type='button' ng-click="clickYes()") Yes
